<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.facturas.julian.mobilefacturas.FormEntregarFactura"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.77"
            android:text="New Text"
            android:id="@+id/LecturaTxtRuta"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ff0666ff"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/LecturaTxtImp"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#ff0666ff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="10"
            android:orientation="horizontal">

            <Button
                android:id="@+id/LecturaBtnAnterior"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="@string/LecturasBtnAnterior"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor="#FF5CBD79"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtMedidor"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtCuenta"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtNombre"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#ffff5e2c"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="New Text"
                    android:id="@+id/LecturaTxtDireccion"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="15dp"
                    android:textColor="#ffff5e2c"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/LecturaBtnSiguiente"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="@string/LecturasBtnSiguiente"
                android:textStyle="bold"
                android:textSize="40dp"
                android:textColor="#FF5CBD79"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/LecturasBtnCodeBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:text="@string/LecturasBtnCodeBar"
                android:textColor="@color/lbl_sin_leer"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/btn_sin_leer"
                android:layout_margin="@dimen/margen_btn"/>

            <Button
                android:id="@+id/LecturasBtnGuardar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4.5"
                android:text="@string/LecturasBtnGuardar"
                android:textColor="@color/lbl_sin_leer"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/btn_guardar"
                android:layout_margin="@dimen/margen_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:text="Mensaje"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/textViewMensaje"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="20dp"
                android:textStyle="normal"
                android:textColor="#ffff5e2c" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/spinMensaje"></Spinner>

        </LinearLayout>


        <EditText
            android:id="@+id/LecturaEditMensaje"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:layout_weight="4.21"
            android:gravity="top"
            android:hint="@string/TxtMensaje"
            android:textColor="#FF5CBD79" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Distancia"
            android:id="@+id/LecturaTxtDistancia"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

    </LinearLayout>


</LinearLayout>
